page{background:#eee}

.top-title{border-top:1rpx solid white;background:black;color:white;height:20px;font-size:14rpx;font-weight:600;font-family:arial;padding-left:5px;line-height:20px}

.slide-image{width:100%}

.catalogue{display: flex;justify-content:space-around;margin-top:4px;align-items:center;height:80rpx;background:url(../../images/line.png) no-repeat 6px 0,url(../../images/line.png) no-repeat 6px 100%;background-size:96%;}

.catalogue view{width:120rpx;height: 30px;background:black;border-radius:50%;color:white;font-size:14rpx;line-height:30px;text-align:center}

.search{border:1px #444 solid;margin:10px auto 0;display:block;width:90%;border-radius:10%;position:relative}
input{padding-left:20rpx;background:white;}


.init-layout{display:flex;flex-wrap:wrap;justify-content:space-between;margin-top:10rpx}
.init-layout view{width:46%;margin-bottom:20px;}
.init-layout image{width:100%;height:150px;box-shadow:2px 2px 3px #000}
.init-layout text{display:block;font-size:20rpx}
.recommend{margin-top:10rpx;padding:0 40rpx 0;}
.re-book{font-weight:600}
span{font-weight:600}

.loading{margin:0 auto}