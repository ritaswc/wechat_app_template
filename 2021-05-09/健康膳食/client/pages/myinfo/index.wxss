
.menu-item {
    position:relative;
    height: 80rpx;
    line-height: 80rpx;
    background: #fff;
    color: #7fabfd;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    overflow:hidden;
    box-sizing: border-box;
    padding-left: 50rpx;
}


.menu-item .menu-item-label {
    float:left;
    color: #999;
}

.menu-item .menu-item-title {
    overflow:hidden;
    text-align: right;
    padding-right: 100rpx;
    box-sizing: border-box;
}

.next-icon {
    position:absolute;
    top:50%;
    right:50rpx;
    transform: translateY(-50%);
    width:45rpx;
    height:45rpx;
}


.gender-dialog,
.city-picker-dialog {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    box-sizing:border-box;
    background-color: rgba(0, 0, 0, 0.5);
}

.gender-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width:80%;
    height:150rpx;
    background-color: #fff;
    box-sizing: border-box;
}

.radio-group {
    display:flex;
    justify-content: space-around;
    align-items: center;
    height: 100%;
}

.picker-view {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 600rpx;
    padding:50rpx;
    box-sizing:border-box;
    background-color: #fff;
}

.picker-view-column {
    text-align: center;
}

.city-picker-btns-container {
    display:flex;
    justify-content: space-around;
    position:absolute;
    bottom: 600rpx;
    width:100%;
    padding: 30rpx 0;
    background-color:#f5f5f5;
}

.city-picker-cancel-btn,
.city-picker-enter-btn {
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    color: #fff;
    font-weight: 700;
    border-radius: 10rpx;
}

.city-picker-cancel-btn {
    background-color: #999;
}

.city-picker-enter-btn {
    background-color: #7fabfd;
}
