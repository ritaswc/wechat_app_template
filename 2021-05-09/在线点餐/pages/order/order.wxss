
.table{
    padding: 40px 0px 0px 30px;
    font-family: "微软雅黑";
}
.table-num{
    margin-right: 20px;
    font-size: 16px;
    margin-top: 4px;
    float: left;
}
.table-input{
    width: 50px;
    height: 25px;
    display: inline-block;
    border: 1px solid #ccc;
    vertical-align: middle;
    text-align: center;
    line-height: 25px;
    font-size: 14px;
}
.table-arrow{
    width: 30px;
    height: 25px;
    margin-left: -1px;
    display: inline-block;
    border: 1px solid #ccc;
    text-align: center;
    line-height: 35px;
    vertical-align: middle;
}
.tabnum {
    color: red;
    margin-left: 30rpx;
}
.beizhu{
    font-family: "微软雅黑";
    padding: 30px 40px 40px 30px;
    border-bottom: 1px solid #aaa;
}
.beizhu-txt{
    margin-top: 4px;
    margin-right: 20px;
    font-size: 16px;
    /*float: left;*/
}
.beizhu-input{
    width: 100%;
    height: 200rpx;
    border: 1px solid #ccc;
    font-size: 14px;
}

.order{
    font-family: "微软雅黑";
    padding: 20px 20px 48px 30px;
}
.cost{
    font-size: 16px;
    margin-bottom: 20px;
}
.cost span{
    color: #ff2d2d;
    margin-left: 12px; 
}
.orderlist{
    margin-top: 20px;
}
.orderlist span{
    font-size: 15px;
}

.bt-area{
    position: fixed;
    bottom: 0px;
    left: 0px;
    right: 0px;

}
.bt-return{
    width: 50%;
    height: 48px;
    display: inline-block;
    background-color: #eee;
    text-align: center;
    line-height: 48px;
    font-size: 20px;
}
.bt-ok{
    width: 50%;
    height: 48px;
    display: inline-block;
    background-color: #58401f;
    text-align: center;
    line-height: 48px;
    font-size: 20px;
    color: #fff;
}
 .list {
  width: 100%;
  
  padding: 30rpx 0;
}

 .list .item {
  display: -webkit-flex;
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 20rpx 40rpx;
}

 .list .item .name {
  -webkit-flex: 1;
}

 .list .item .total {
  width: 120rpx;
}

.reduce, .add {
  font-size: 50rpx;
  background: #feb70f;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border-radius: 50%;
  line-height:50rpx 
}

 .list .item .num {
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}