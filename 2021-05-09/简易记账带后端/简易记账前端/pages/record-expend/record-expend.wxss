/* pages/record-expend/record-expend.wxss */

page {
  overflow: hidden;
  height: 100%;
}

.select-consumption-patterns {
  width: 100%;
}

.consumption-patterns-item {
  width: 25%;
  display: inline-block;
  position: relative;
}

.consumption-patterns-item-icon {
  width: 100rpx;
  height: 100rpx;
}

.pay-money {
  margin: 20rpx;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
}

.money-icon {
  width: 32rpx;
  height: 32rpx;
}

.date-text {
  color: gray;
  flex: 1;
  text-align: end;
}

.money-text {
  color: red;
  flex: 1;
  text-align: end;
}

.calculator {
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 999;
  display: flex;
  background-color: lightgray;
  border: 1rpx solid gray;
   box-sizing: border-box;
   height: 400rpx;
}

.calculator-number {
  flex: 3;
  width: 75%;
}

.calculator-number-item {
  width: 100%;
  display: flex;
  height: 25%;
}

.number {
  flex: 1;
  text-align: center;
  vertical-align: middle;
  border: 1rpx solid gray;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  height: 100%;
}
.number-hover{
background-color: #3B3B3B;
}

.calculator-operator {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: column;
  flex-direction: column;
}

.operator {
  border: 1rpx solid gray;
  flex: 2;
  text-align: center;
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
