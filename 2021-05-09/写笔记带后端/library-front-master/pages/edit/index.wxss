page{
    width: 100%;
    height: 100%;
}
.container{
    flex-flow:column nowrap;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}
.title{
    margin: 15rpx 5%;
    width: 90%;
    text-align: center;
    height: 60rpx;
    font-size: 38rpx;
    border-bottom: 1px solid #f5f5f5;
}
.row{
    flex: 1;

    width: 90%;
    height: 100%;
    margin: 0 5%;
    overflow: hidden;
}
.row .text{

    width: 100%;
    height: 100%;
    font-size: 16px;
    color: #666;
}
.view_text{
    font-size: 13px;
}
.date{
    width: 100%;
    padding: 5rpx 0;
    text-align: center;
}
.bottom{
    width: 100%;
    background: #fff;
    display: flex;
    flex-flow:row nowrap;
    justify-content: center;
    align-items: center;
}
.bottom .btn{
    flex: 1;
    line-height: 2;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin: 30rpx 30rpx;
}
.btn.success{
    background: #1aad19;
    color: #fff;
}
.btn.del{
    background: #e64340;
    color: #fff;
}
