}
.index-heading-content view {
  display: inline-block;
  padding:0 14rpx;
  font-size: 30rpx;
  font-family: "Microsoft YaHei",Arial;
}
.index-heading-scrol {
  padding: 5rpx 0;  
  width: 100%;
  /*border-bottom:20rpx solid #eee;*/
  overflow: hidden;
  display: flex;
}
.index-heading-content::-webkit-scrollbar {
  display: none;
}
.index-heading-content {
    display: inline-block;
    width: 100%;
    height: 40px;
    white-space: nowrap;
    overflow-y:hidden;
}
.scrollview-hide {
  position: relative;
  border: 1px solid #fff;
  background-color: #eee;
  top: -12px;
  height: 7px;
  widows: 100%;
}
.index-heading-more {
  height: 60rpx;
  width: 80rpx;
  background-color: #fff;
  font-size: 31.2rpx;
  text-align: center;
  line-height: 60rpx;
  opacity:0.2;
  -webkit-filter:blur(0.1px);
  filter:blur(0.1px);
}
