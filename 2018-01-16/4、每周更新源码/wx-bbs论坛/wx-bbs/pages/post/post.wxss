.comment-voice-container {
  margin-top: 8rpx;
  padding: 0 24rpx;
}
.audio-wrap {
  width:300rpx;
  height: 60rpx;
  border-radius: 5px;
  border: 2rpx solid #d6d6d6;
  padding: 6rpx 0;
  float:left;
}
.audio-time-wrap {
 height: 60rpx;
 line-height: 60rpx;
 padding-left: 20rpx;
 font-family: "Microsoft YaHei",Arial; 
 float: left;
 font-size: 26rpx; 
}
.voice-select {
  width:100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1;
}
.record-container {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #4d4d4d;
  height: 40%;
}
.record-time{
  display: block;
  text-align: center;
  margin: 100px 0;
}
.start-record {
  width: 100%;
  margin: auto 0;
  text-align: center;
}
.record-tip-wrap {
  width: 100%;
  text-align: center;
  color: #ffffff;
  margin-top: 20rpx;
}
.stop-record{
  width: 150rpx;
  height: 150rpx;
  border: 20rpx solid #ffffff;
  background-color: #f55c23;
  border-radius: 130rpx;
  margin: 0 auto;
}
.record-wrap{
  position: relative;
  top: 40%;
  margin-top: -150rpx;
}
.recored-cancle-wrap {
  color:red;
  padding: 20rpx;
  text-align: right;
}
.category-selected-delete{
    position: absolute;
    top: 30rpx;
    cursor: pointer;
    right: 30rpx;
    width: 60rpx;
    height: 60rpx;
    background: url(http://i.pengxun.cn//content/images/imgpost2/01/post-big-pic-03.png) no-repeat 0 0;
    background-size: 100%;
    border: 2rpx solid #17b5ee;
    border-radius: 100%;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    box-sizing: border-box;
}